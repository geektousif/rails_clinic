<div class="max-w-3xl mx-auto bg-white p-6 rounded shadow mt-6">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Patient Details</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
    <div><strong>Full Name:</strong> <%= @patient.full_name %></div>
    <div><strong>Email:</strong> <%= @patient.email %></div>
    <div><strong>Phone:</strong> <%= @patient.phone %></div>
    <div><strong>Date of Birth:</strong> <%= @patient.date_of_birth %></div>
    <div><strong>Gender:</strong> <%= @patient.gender %></div>
    <div><strong>Address:</strong> <%= @patient.address %></div>
    <div class="md:col-span-2">
      <strong>Medical Issues:</strong>
      <p class="mt-1"><%= @patient.medical_issues %></p>
    </div>
  </div>

  <div class="flex items-center justify-start gap-4 mt-6">
    <%= link_to "Edit", edit_receptionists_patient_path(@patient),
        class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>

    <%= link_to "Back to All Patients", receptionists_patients_path,
        class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>

    <%= button_to "Delete", receptionists_patient_path(@patient),
        method: :delete,
        form: { data: { turbo_confirm: "Are you sure you want to delete this patient?" } },
        class: "inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
  </div>
</div>
