<%= form_with model: [:receptionists, @patient], data: { turbo_frame: "_top" }, class: "space-y-4" do |f| %>
<% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
      <ul><% patient.errors.full_messages.each { |msg| concat(content_tag(:li, msg)) } %></ul>
    </div>
  <% end %>

<div>
    <%= f.label :full_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :full_name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>
    <div><%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :phone, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>

    <div><%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :email, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>

    <div><%= f.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :date_of_birth, as: :date, max: Date.today.strftime("%Y-%m-%d"), class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>

    <div><%= f.label :gender, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :gender, [["Male", "male"], ["Female", "female"], ["Other", "other"]], { include_blank: 'Select gender' }, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"  %><br />
</div>

    <div><%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :address, rows: 3, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>

    <div><%= f.label :medical_issues, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :address, rows: 3, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %><br />
</div>

    <div class="flex justify-end gap-6">

        <button data-action="click->modal#close" class="inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">Close</button>

        <%= f.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
</div>
<% end %>